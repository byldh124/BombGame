<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.moondroid.bombgame.presentation.view.splash.SplashFragment"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/toHome"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>

    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.moondroid.bombgame.presentation.view.home.HomeFragment"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/toGame"
            app:destination="@id/gameFragment"/>

    </fragment>

    <fragment
        android:id="@+id/gameFragment"
        android:name="com.moondroid.bombgame.presentation.view.game.GameFragment"
        tools:layout="@layout/fragment_game"/>

</navigation>