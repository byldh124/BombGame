<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- Activity Main Theme-->
    <style name="WhiteStatusBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@drawable/bg_toolbar</item>
        <item name="android:theme">@style/ToolbarThemeBlack</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/font_ex</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/blue_darK02</item>
    </style>


    <!-- 다이얼로그 -->
    <style name="DialogTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="MyButton">
        <item name="android:fontFamily">@font/font_ex</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/defaultText_white</item>
    </style>

    <style name="ButtonBlue01" parent="MyButton">
        <item name="android:background">@drawable/button_blue01</item>
    </style>

    <style name="ButtonGray01" parent="MyButton">
        <item name="android:background">@drawable/button_gray01</item>
    </style>

    <style name="ButtonOrange01" parent="MyButton">
        <item name="android:background">@drawable/button_orange01</item>
    </style>
</resources>