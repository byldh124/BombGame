<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="@style/Toolbar">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_back"/>

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/ToolbarTitle"
            android:letterSpacing="0.1"
            android:text="@string/cmn_game_rules" />
    </com.google.android.material.appbar.MaterialToolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:overScrollMode="never">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextTitle"
                android:text="@string/cmn_game_rules"/>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextDescription"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:text="@string/description_game_rules"/>


            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextTitle"
                android:layout_marginTop="32dp"
                android:text="@string/cmn_game_type" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextDescription"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:text="@string/cmn_initial_game"/>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextDescription"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:text="@string/description_initial_game"/>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextDescription"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:text="@string/example_initial_game"/>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextDescription"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                android:text="@string/cmn_association_game"/>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextDescription"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:text="@string/description_association_game"/>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextDescription"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:text="@string/example_association_game"/>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextDescription"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                android:text="@string/cmn_question_game"/>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextDescription"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:text="@string/description_question_game"/>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextDescription"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:text="@string/example_question_game"/>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextDescription"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                android:text="@string/cmn_last_word_game"/>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextDescription"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:text="@string/description_last_word_game"/>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextDescription"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:text="@string/example_last_word_game"/>


            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextTitle"
                android:layout_marginTop="32dp"
                android:text="@string/cmn_player_number" />
            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextDescription"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:text="@string/description_player_number"/>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>