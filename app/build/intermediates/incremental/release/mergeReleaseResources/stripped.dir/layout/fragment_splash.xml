<?xml version="1.0" encoding="utf-8"?>
        
    
                 
                          
                             
           

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" android:tag="layout/fragment_splash_0">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_ex"
            android:text="@string/app_name"
            android:textColor="@color/blue_darK01"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnStart"
            style="@style/ButtonBlue01"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
                                
            android:text="@string/cmn_start"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"  android:tag="binding_1"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnHowToUse"
            style="@style/ButtonBlue01"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/cmn_game_rules"
                                
            app:layout_constraintStart_toStartOf="@id/btnStart"
            app:layout_constraintTop_toBottomOf="@id/btnStart"
            app:layout_constraintWidth_percent="0.6"  android:tag="binding_2"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnSetting"
            style="@style/ButtonBlue01"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/cmn_setting"
                                
            app:layout_constraintEnd_toEndOf="@id/btnStart"
            app:layout_constraintTop_toBottomOf="@id/btnHowToUse"
            app:layout_constraintWidth_percent="0.6"  android:tag="binding_3"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

         